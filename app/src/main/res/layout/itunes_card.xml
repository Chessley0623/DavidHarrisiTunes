<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/transparent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:padding="5sp"
        >

        <ImageView
            android:id="@+id/cover_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/name_of_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:text="Name Of Artist"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cover_art"
            />

        <TextView
            android:id="@+id/album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Album Title"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/name_of_artist"
            app:layout_constraintStart_toEndOf="@id/cover_art"
            />

        <TextView
            android:id="@+id/name_of_song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Song name"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/album"
            app:layout_constraintStart_toEndOf="@id/cover_art"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$100.00"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/name_of_song"
            app:layout_constraintStart_toEndOf="@id/cover_art"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>